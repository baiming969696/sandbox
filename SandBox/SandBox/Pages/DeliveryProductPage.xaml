<Page x:Class="SandBox.Pages.DeliveryProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="DeliveryProductPage">

    <Grid>
    	<DataGrid Margin="62,51.081,54,0" VerticalAlignment="Top" d:LayoutOverrides="Width">
    		<DataGrid.Columns>
    			<DataGridCheckBoxColumn Header="选择项" Width="Auto"/>
    			<DataGridCheckBoxColumn Header="产品" Width="Auto"/>
				<DataGridCheckBoxColumn Header="数量" Width="Auto"/>
				<DataGridCheckBoxColumn Header="金额" Width="Auto"/>
    			<DataGridCheckBoxColumn Header="账期"/>
    		</DataGrid.Columns>
    	</DataGrid>
    	<Button x:Name="Next" Content="下一步"
    		Height="23" Width="45pt" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,8,8"
    		Style="{DynamicResource ButtonStyle_Common}"
    		/>
    	<TextBlock Height="19" Margin="62,32.081,141,0" TextWrapping="Wrap" Text="本年订单" VerticalAlignment="Top"/>
        
    </Grid>
</Page>
