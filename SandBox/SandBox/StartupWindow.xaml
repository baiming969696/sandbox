<Window x:Name="Window" x:Class="SandBox.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
		Title="StartupWindow"
		WindowStyle="None" AllowsTransparency="True"
		Width="600" Height="400" WindowStartupLocation="CenterScreen"
		BorderBrush="Gray" BorderThickness="0.618"
		MouseLeftButtonDown="DragWindow">
	
	<Window.Resources>
		<Storyboard x:Key="OnLoaded" Completed="Showup_Completed">
			<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="App_Sign">
				<EasingDoubleKeyFrame KeyTime="0:0:1" Value="1"/>
				<EasingDoubleKeyFrame KeyTime="0:0:1.5" Value="0"/>
			</DoubleAnimationUsingKeyFrames>
		</Storyboard>
	</Window.Resources>
	<Window.Triggers>
		<EventTrigger RoutedEvent="FrameworkElement.Loaded">
			<BeginStoryboard x:Name="OnLoaded_BeginStoryboard" Storyboard="{StaticResource OnLoaded}"/>
		</EventTrigger>
	</Window.Triggers>


	<Grid x:Name="LayoutRoot">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="auto"/>
			<ColumnDefinition />
		</Grid.ColumnDefinitions>

		<Viewbox x:Name="Image" Grid.Column="0"
						VerticalAlignment="Top" HorizontalAlignment="Left"  Margin="0">
			<Image x:Name="Source" Source="img\Startup.png" Stretch="Fill" />
		</Viewbox>

		<Button x:Name="Button_Login" Grid.Column="1"
					Content="登陆" Height="20pt" Width="100"
					HorizontalAlignment="Center" Margin="0,0,0,50" VerticalAlignment="Bottom"
					Style="{DynamicResource ButtonStyle_Common}"
					Click="Button_Login_Click" />
			
		<Grid x:Name="App_Sign" Grid.Column="0" Grid.ColumnSpan="2" d:IsHidden="True">
			<Rectangle Fill="#FFFFFFFF" Width="600" Height="400" />
			<Viewbox>
				<Grid Width="48" Height="48" Visibility="Visible">
					<Grid Visibility="Visible">
						<Rectangle Fill="#FFFFFFFF" Visibility="Visible" />
						<Ellipse Fill="#FFFFFFFF" Visibility="Collapsed"  />
						<Path Data="M50.5,4.7500001C25.232973,4.75 4.75,25.232973 4.7500001,50.5 4.75,75.767029 25.232973,96.25 50.5,96.25 75.767029,96.25 96.25,75.767029 96.25,50.5 96.25,25.232973 75.767029,4.75 50.5,4.7500001z M50.5,0C78.390381,0 101,22.609621 101,50.5 101,78.390381 78.390381,101 50.5,101 22.609621,101 0,78.390381 0,50.5 0,22.609621 22.609621,0 50.5,0z" Stretch="Fill" Fill="#FFFFFFFF" Visibility="Collapsed"  />
					</Grid>
					<Path Data="M0.31999958,13.986001L61.251,13.986001 61.251,47.922001 0.31999958,47.922001z M32.114001,0L47.581169,0 61.488003,11.999 32.114001,11.999z M13.906711,0L29.372999,0 29.372999,11.999 0,11.999z" Stretch="Uniform" Fill="#FFAC9C7B" Width="32" Height="32" Margin="0,0,0,0"  />
				</Grid>
			</Viewbox>
		</Grid>
	</Grid>

</Window>
