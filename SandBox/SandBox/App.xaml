<Application
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="SandBox.App"
	StartupUri="MainWindow.xaml">
	<Application.Resources>
		<!-- 应该在此定义应用程序级的资源。-->
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="rdict/Colors.xaml"/>
				<ResourceDictionary Source="rdict/Brushes.xaml"/>
				<ResourceDictionary Source="rdict/ButtonStyles.xaml"/>
				<ResourceDictionary Source="rdict/Strings.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>
</Application>
